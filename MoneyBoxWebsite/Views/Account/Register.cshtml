@model MoneyBoxWebsite.Models.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    
    <form id="registerForm" asp-action="Register" method="post">
        <h2>Create a new account.</h2>
        <hr />
        
        <div class="form-floating mb-3">
            <input asp-for="Username" class="form-control" aria-required="true" autocomplete="on" placeholder="TheNamedOne" />
            <label asp-for="Username">Username</label>
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>
        
        <div class="form-floating mb-3">
            <input asp-for="FirstName" class="form-control" aria-required="true" autocomplete="on" placeholder="TheFirstOne" />
            <label asp-for="FirstName">FirstName</label>
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="LastName" class="form-control" aria-required="true" autocomplete="on" placeholder="TheLastOne" />
            <label asp-for="LastName">LastName</label>
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>

        <!-- aria-required="true" add many accessibility and validation functions -->
        <div class="form-floating mb-3">
            <input asp-for="Email" class="form-control" aria-required="true" autocomplete="on" placeholder="name@example.com" />
            <label asp-for="Email">Email</label>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="Password" class="form-control" aria-required="true" autocomplete="on" placeholder="******" />
            <label asp-for="Password">Password</label>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="ConfirmedPassword" class="form-control" aria-required="true" autocomplete="on" placeholder="******" />
            <label asp-for="ConfirmedPassword">ConfirmedPassword</label>
            <span asp-validation-for="ConfirmedPassword" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="StreetNumber" class="form-control" aria-required="true" autocomplete="on" placeholder="" />
            <label asp-for="StreetNumber">Street number</label>
            <span asp-validation-for="StreetNumber" class="text-danger"></span>
        </div>
        
        <div class="form-floating mb-3">
            <input asp-for="StreetName" class="form-control" aria-required="true" autocomplete="on" placeholder="rue des Fontaines" />
            <label asp-for="StreetName">Street name</label>
            <span asp-validation-for="StreetName" class="text-danger"></span>
        </div>

        
        <div class="form-floating mb-3">
            <input asp-for="PostalCode" class="form-control" aria-required="true" autocomplete="on" placeholder="59000" />
            <label asp-for="PostalCode">Postal code</label>
            <span asp-validation-for="PostalCode" class="text-danger"></span>
        </div>
        
        <div class="form-floating mb-3">
            <input asp-for="City" class="form-control" aria-required="true" autocomplete="on" placeholder="Lille" />
            <label asp-for="City">City</label>
            <span asp-validation-for="City" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="Country" class="form-control" aria-required="true" autocomplete="on" placeholder="France" />
            <label asp-for="Country">Country</label>
            <span asp-validation-for="Country" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="PhoneNumber" class="form-control" aria-required="true" autocomplete="on" placeholder="0123456789" />
            <label asp-for="PhoneNumber">PhoneNumber</label>
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <button type="submit" class="btn btn-success">
                Register
            </button>
        </div>

        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
    </form>
    
</div>
